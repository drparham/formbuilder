{
	"name": "pta/formbuilder",
	"description": "Automatically generate form definitions from SQL Schema",
	"authors": [
		{
			"name": "Dustin Parham",
			"email": "dr.parham@gmail.com"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "http://packages.packageteamalliance.com"
		},
		{
		  "type": "composer",
		  "url": "http://packages.cartalyst.com"
		}
	],
	"require": {
		"php": ">=5.4.0",
		"illuminate/support": "4.2.*",
        "cartalyst/support": "1.1.*"
	},
	"autoload": {
		"classmap": [
			"database/migrations",
			"database/seeds"
		],
		"psr-4": {
			"Pta\\Formbuilder\\": "src/"
		}
	},
    "scripts": {
      "post-install-cmd": [
         "php artisan vendor:publish --provider='Vendor\\Pta\\Formbuilder\\Src\\Providers\\FormBuilderServiceProvider' --tag='config'",
         "php artisan vendor:publish --provider='Vendor\\Pta\\Formbuilder\\Src\\Providers\\FormBuilderServiceProvider' --tag='migrations'",
         "php artisan vendor:publish --provider='Vendor\\Pta\\Formbuilder\\Src\\Providers\\FormBuilderServiceProvider' --tag='seeds'"
      ]
    },
	"minimum-stability": "dev",
	"prefer-stable": true
}
